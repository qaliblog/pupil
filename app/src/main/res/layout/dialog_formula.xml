<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Formula Configuration"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Parameters:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/baseParametersText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:background="#f0f0f0"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error Corrections:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/errorCorrectionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:background="#f0f0f0"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Optimized Formula:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/aiFormulaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No AI optimization applied"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:background="#e8f5e8"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibration Data:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/calibrationDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:background="#f0f0f0"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/copyFormulaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Formula to Clipboard"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/exportFormulaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export Formula to File"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/aiOptimizeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– Trigger AI Optimization"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</ScrollView>